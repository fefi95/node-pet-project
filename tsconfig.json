{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": false,
    "types" : ["node", "jest"],
  },
  "include": [
    "src/**/*.*"
  ]
}
